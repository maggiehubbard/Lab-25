@model IEnumerable<OnlineShop.Models.Product>
@using OnlineShop.Models;

@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>

<p class="btn btn-default">
    @Html.ActionLink("Create New Product", "Create")
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

    @foreach (Product p in ViewBag.ProductList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => p.Name)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => p.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => p.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => p.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => p.Image)
            </td>
            <td>
                <p class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = p.ProductID }) </p>

                <p class="btn btn-default">@Html.ActionLink("Delete", "Delete", new { id = p.ProductID }) </p>
            </td>
        </tr>
    }

</table>
